const btn = document.getElementById('sidebar-toggle');
const sidebar = document.querySelector('.sidebar');

btn.addEventListener('click', function() {
    sidebar.classList.toggle('active');
})

const remo = document.querySelector('#close-button');

remo.addEventListener('click', function() {
    sidebar.classList.remove('active');
})


<script>
    const left = document.getElementById('left');
    const right = document.getElementById('right');
    const box = document.querySelector('.box');
    const slider = document.getElementById('move');

    left.addEventListener('click', function() {
        if(box.style.marginLeft == '-410px') {
            box.style.marginLeft = '';
        }
        else if(box.style.marginLeft == '') {
            box.style.marginLeft = '410px';
        }
    })

    right.addEventListener('click', function() {

        if(box.style.marginLeft == '410px') {
            box.style.marginLeft = '';
        }
        else if(box.style.marginLeft == '') {
            box.style.marginLeft = '-410px'
        }
    })
</script>
